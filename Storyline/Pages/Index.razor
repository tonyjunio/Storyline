@page "/"
@using Storyline.Models
@inject HttpClient Http

@code{
    protected IEnumerable<StoryEvent> StoryEvents;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        await this.LoadDataAsync();
    }

    protected async Task LoadDataAsync()
    {
        try
        {
            this.StoryEvents = await Http.GetFromJsonAsync<IEnumerable<StoryEvent>>("sample-data/storyline-residentevil.json");
        }
        catch (Exception)
        {

            throw;
        }
    }
}

<Storyline.Shared.StoryEvent.Display Title="Resident Evil" StoryEvents="this.StoryEvents"></Storyline.Shared.StoryEvent.Display>